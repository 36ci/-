<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 主渐变背景 -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#667eea"
                android:centerColor="#764ba2"
                android:endColor="#f093fb"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- 顶部装饰圆形 -->
    <item android:gravity="top|start">
        <shape android:shape="oval">
            <size android:width="200dp" android:height="200dp" />
            <gradient
                android:centerColor="#40FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="radial" />
        </shape>
    </item>
    
    <!-- 底部装饰圆形 -->
    <item android:gravity="bottom|end">
        <shape android:shape="oval">
            <size android:width="300dp" android:height="300dp" />
            <gradient
                android:centerColor="#30FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="radial" />
        </shape>
    </item>
</layer-list> 